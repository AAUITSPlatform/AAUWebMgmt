@model ITSWebMgmt.Models.UserModel
@using ITSWebMgmt.Connectors
<script>
    $("#smloader > div").hide("fast");
</script>
@{
    Model.ServiceManager = await new SCSMConnector().getActiveIncidents(Model.UserPrincipalName, Model.DisplayName);
}

<h2>SCSM Information</h2>
@using (Html.BeginForm("CreateNewIRSR", "User", FormMethod.Post))
{
    @Html.HiddenFor(m => m.DisplayName)
    <input type="submit" value="Create new IR/SR" />
}
@Html.Raw(Model.ServiceManager)
<br>
@using (Html.BeginForm("CreateWin7UpgradeFormsForUserPCs", "User", FormMethod.Post))
{
    @Html.HiddenFor(m => m.UserName)
    <input type="submit" value="Create new SRs for Windows 7 PCs" />
}
